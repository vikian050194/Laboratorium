@model IEnumerable<Laboratorium.Models.ViewModels.ScriptViewModel>

<h2>Пользователи</h2>
@*<h4></h4>*@
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.Label("Название")
            </th>
            <th>
                @Html.Label("Скрипт")
            </th>
            <th>
                @Html.Label("Автор")
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    <a type="button" class="btn btn-default" href=@Url.Action("Index", "Console", new { id = item.Id })>
                        <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>