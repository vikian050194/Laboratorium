@model Laboratorium.Models.ViewModels.PacketsInViewModel

<h2>Пакеты</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.Label("Название")
                <button class="btn btn-default sorting active" type="button" orderby="Title">
                    <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span>
                </button>
            </th>
            <th>
                @Html.Label("Скрипт")
                <button class="btn btn-default sorting" type="button" orderby="Script">
                    <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span>
                </button>
            </th>
            <th>
                @Html.Label("Автор")
                <button class="btn btn-default sorting" type="button" orderby="Author">
                    <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span>
                </button>
            </th>
            <th>
                @Html.Label("Общедоступный")
            </th>
            <th>
                @Html.Label("Встраиваемый")
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
        <tr>
            <th>
                @Html.TextBoxFor(m => m.Filtering.Title, new { @class = "form-control", placeholder = "Искомое название..." })
            </th>
            <th>
                @Html.TextBoxFor(m => m.Filtering.Script, new { @class = "form-control", placeholder = "Искомый код..." })
            </th>
            <th>
                @Html.TextBoxFor(m => m.Filtering.Author, new { @class = "form-control", placeholder = "Искомый автор..." })
            </th>
            <th>
                @Html.DropDownListFor(m => m.Filtering.IsPublic, new List<SelectListItem> { new SelectListItem { Selected = true, Text = @"Да", Value = "true" }, new SelectListItem { Text = @"Нет", Value = "false" } }, new { @class = "form-control" })
            </th>
            <th>
                @Html.DropDownListFor(m => m.Filtering.IsReusable, new List<SelectListItem> { new SelectListItem { Selected = true, Text = @"Да", Value = "true" }, new SelectListItem { Text = @"Нет", Value = "false" } }, new { @class = "form-control" })
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<ul class="pagination"></ul>

<link href="../../Content/loadFromDb.css" rel="stylesheet">
<script type="text/javascript" src="../../Scripts/loadFromDb.js"></script>