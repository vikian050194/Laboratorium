@model IEnumerable<Laboratorium.Models.ViewModels.AccountsListItem>

<h2>Пользователи</h2>
@*<h4></h4>*@
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.Label("Фамилия")
            </th>
            <th>
                @Html.Label("Имя")
            </th>
            <th>
                @Html.Label("Отчество")
            </th>
            <th>
                @Html.Label("Права")
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a type="button" class="btn btn-default" href=@Url.Action("ManageUserAccount", new { id = item.Id })>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    @*&nbsp;Edit schedule data*@
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>