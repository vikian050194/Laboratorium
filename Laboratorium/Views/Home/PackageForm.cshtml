@model Laboratorium.Models.ViewModels.PacketViewModel

@using (Ajax.BeginForm("PackageForm", "Home", null, new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST",
    UpdateTargetId = "interactionForm",
    LoadingElementId = "progressbar"
}, new { id = "interactionForm", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="container navbar navbar-fixed-bottom flexbox">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="padding-left: 0px; padding-right: 7.5px;">
            <div class="panel panel-default formpanel">
                <div class="panel-heading">
                    Скрипт
                </div>
                <div class="panel-body">
                    <div>
                        @Html.EditorFor(m => m.Title)
                    </div>
                    <div>
                        <textarea id="Script" name="Script">@Model.Script</textarea>
                    </div>
                    <div class="btn-group btn-group-justified" role="group">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-warning" disabled>
                                <span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-warning" disabled>
                                <span class="glyphicon glyphicon-floppy-open" aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="btn-group" role="group">
                            <input type="submit" value="Выполнить" class="btn btn-warning"/>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="padding-left: 7.5px; padding-right: 0px;">
            <div class="panel panel-default formpanel">
                <div class="panel-heading">Результат</div>
                <div class="panel-body">
                    <div id="progressbar" class="progress" style="display: none;">
                        <div class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                            ожидайте
                        </div>
                    </div>
                    <label>Input</label>
                    @for (var i = 0; i < Model.Input.Count; i++)
                    {
                        <div name="Input[@i]">@Model.Input[i]</div>
                    }
                    <hr/>
                    <label>Errors</label>
                    @for (var i = 0; i < Model.Errors.Count; i++)
                    {
                        <div name="Errors[@i]">@Model.Errors[i]</div>
                    }
                    <hr/>
                    <label>Result</label>
                    @for (var i = 0; i < Model.Result.Count; i++)
                    {
                        <div name="Result[@i]">@Model.Result[i]</div>
                    }
                </div>
            </div>
        </div>
    </div>
}